{
  "name": "burrata",
  "version": "0.1.0",
  "description": "Robust, developer-friendly postMessage.",
  "repository": "https://github.com/timdp/burrata",
  "author": {
    "name": "Tim De Pauw",
    "url": "https://tmdpw.eu/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": ">=1.7.0"
  },
  "main": "src/index.js",
  "browser": "dist/burrata.min.js",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "prepublishOnly": "yarn test && yarn run clean && yarn run build",
    "clean": "yarn run clean:dist && yarn run clean:coverage",
    "clean:dist": "yarn run rimraf dist",
    "clean:coverage": "yarn run rimraf dist",
    "build": "yarn run webpack",
    "test": "yarn run test:lint && yarn run test:e2e",
    "test:lint": "yarn run standard",
    "test:e2e": "yarn run clean:coverage && NODE_ENV=test yarn run karma start --single-run"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.51",
    "custom-event": "^1.0.1",
    "event-target-shim": "^3.0.1",
    "p-defer": "^1.0.0",
    "serialize-error": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "babel-loader": "^8.0.0-beta",
    "babel-plugin-istanbul": "^4.1.6",
    "chai": "^4.1.2",
    "dirty-chai": "^2.0.1",
    "es6-error": "^4.1.1",
    "karma": "^2.0.3",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coveralls": "^1.2.1",
    "karma-dirty-chai": "^2.0.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-iframes": "^0.5.2",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^3.0.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "expect"
    ]
  }
}
