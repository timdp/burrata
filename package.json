{
  "name": "burrata",
  "version": "0.0.0",
  "description": "Robust, developer-friendly postMessage.",
  "repository": "https://github.com/timdp/burrata",
  "author": {
    "name": "Tim De Pauw",
    "url": "https://tmdpw.eu/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": ">=1.7.0"
  },
  "main": "src/index.js",
  "browser": "dist/burrata.min.js",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "prepare": "yarn run build",
    "clean": "yarn run rimraf dist",
    "build": "yarn run clean && yarn run build:bundle && yarn run build:minify",
    "build:bundle": "yarn run rollup -c",
    "build:minify": "yarn run uglifyjs -c -m -o dist/burrata.min.js dist/burrata.js",
    "test": "yarn run standard"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.51",
    "p-defer": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.7",
    "rollup-load-plugins": "^0.3.0",
    "rollup-plugin-babel": "^4.0.0-beta.5",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "standard": "^11.0.1",
    "uglify-js": "^3.4.0"
  },
  "standard": {
    "globals": [
      "EventTarget",
      "CustomEvent"
    ]
  }
}
